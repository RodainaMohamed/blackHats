{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./public/js/app"
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": true
  }
}